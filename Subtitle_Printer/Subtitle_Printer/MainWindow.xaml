<Window x:Class="Subtitle_Printer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Subtitle_Printer"
        xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closing="Window_Closing">
    <Grid>
        <Grid Margin="0,0,0.286,-0.286">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="39*"/>
                <ColumnDefinition Width="358*"/>
            </Grid.ColumnDefinitions>
            <local:VerticalTabTextEditor x:Name="TextBox" BorderThickness="2" Margin="66,5,10,5" KeyDown="TextBox_KeyDown" Grid.ColumnSpan="2"/>
            <local:VerticalTabLineNumberMargin x:Name="TextBoxLineNumber" Width="61" Margin="0,5" HorizontalAlignment="Left"/>
        </Grid>
    </Grid>
</Window>
