<Window x:Class="Subtitle_Printer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Subtitle_Printer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="44"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <local:BindableRichTextBox x:Name="TextBox" Margin="10,5,10,10" DataContext="{Binding Text}" Grid.Row="1" KeyUp="TextBox_KeyUp" PreviewDrop="TextBox_PreviewDrop"/>
        <Menu Height="19" VerticalAlignment="Top">
            <MenuItem Header="ファイル(_F)">
                <MenuItem Header="終了"/>
            </MenuItem>
        </Menu>
        <Button Content="{Binding Text}" HorizontalAlignment="Left" Margin="10,24,0,0" Width="75" Height="20" VerticalAlignment="Top"/>

    </Grid>
</Window>
